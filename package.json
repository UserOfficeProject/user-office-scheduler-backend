{
  "name": "user-office-scheduler-backend",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/UserOfficeProject/user-office-scheduler-backend.git"
  },
  "private": true,
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "test": "exit 0",
    "prod": "npm run build && node ./build/index.js",
    "dev": "ts-node-dev --rs --respawn ./src/index.ts",
    "dev:db:up": "docker-compose -f docker-compose.local.yml up -d",
    "dev:db:down": "docker-compose -f docker-compose.local.yml down -v",
    "dev:docker": "npm install && ts-node-dev --rs --respawn ./src/index.ts",
    "lint": "tsc --noEmit && eslint ./src --ext .js,.ts --quiet",
    "lint:all": "tsc --noEmit && eslint ./src --ext .js,.ts",
    "lint:fix": "tsc --noEmit && eslint ./src --ext .js,.ts --fix --quiet",
    "generate:local": "node scripts/generate-graphql-sdk.js"
  },
  "lint-staged": {
    "**/*.{js,ts}": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "SWAP",
  "license": "ISC",
  "dependencies": {
    "@apollo/federation": "^0.33.8",
    "@apollo/subgraph": "^0.1.5",
    "@esss-swap/duo-localisation": "^1.1.15",
    "@esss-swap/duo-logger": "^1.1.2",
    "@esss-swap/duo-message-broker": "^1.0.8",
    "@esss-swap/duo-validation": "^2.1.0",
    "apollo-graphql": "^0.9.5",
    "apollo-server": "^3.5.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "graphql": "^15.7.2",
    "graphql-request": "^3.6.1",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.14",
    "luxon": "^1.28.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.1",
